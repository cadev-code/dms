generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  CONTENT_ADMIN
  USER
}

model User {
  id           Int      @id @default(autoincrement())
  fullname     String
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())

  role   UserRole    @default(USER)
  groups UserGroup[]

  isActive  Boolean   @default(true)
  disableAt DateTime?
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())

  users       UserGroup[]
  folderPerms FolderGroupPermission[]
  filePerms   FileGroupPermission[]
}

model UserGroup {
  userId    Int
  groupId   Int
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model File {
  id              Int      @id @default(autoincrement())
  documentName    String   @unique
  fileName        String
  previewFileName String?
  type            String
  size            Int
  createdAt       DateTime @default(now())

  folderId Int?
  folder   Folder? @relation(fields: [folderId], references: [id], onDelete: Cascade)

  groupPerms FileGroupPermission[]
}

model Folder {
  id         Int      @id @default(autoincrement())
  folderName String   @unique
  parentId   Int?
  createdAt  DateTime @default(now())

  parent   Folder?  @relation("FolderToFolder", fields: [parentId], references: [id], onDelete: Cascade)
  children Folder[] @relation("FolderToFolder")
  files    File[]

  groupPerms FolderGroupPermission[]
}

model FolderGroupPermission {
  folderId  Int
  groupId   Int
  createdAt DateTime @default(now())

  folder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)
  group  Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([folderId, groupId])
}

model FileGroupPermission {
  fileId    Int
  groupId   Int
  createdAt DateTime @default(now())

  file  File  @relation(fields: [fileId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@id([fileId, groupId])
}
